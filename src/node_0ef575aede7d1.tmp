function highestCount(arrayNumber) {
  let currentLongest = arrayNumber[0];

  for (let index = 0; index < arrayNumber.length; index += 1) {
    if (arrayNumber[index] > currentLongest) {
      currentLongest = arrayNumber[index];
    }
  }
  return currentLongest;
}
function repeating(numberRepeating) {
  let longest = numberRepeating;
  let cont = 0;
  for (let index = 0; index <= numberRepeating.length; index += 1) {
    for (let index2 = 0; index2 < numberRepeating.length; index2 += 1){
      if (numberRepeating[index] === longest[index2]){
        numberRepeating[index] = longest.length[index2]
        cont += 1;
      }
    }
  }
  return cont;
}
console.log(highestCount([9, 1, 2, 12, 9, 5, 7]));
console.log(repeating([9, 1, 2, 3, 12, 5, 7]));
